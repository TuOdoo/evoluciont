<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--  Inherit calendar.event Form View -->
        <record model="ir.ui.view" id="view_calendar_event_form_inherit">
            <field name="name">calendar.event.form.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <page name="page_details" position="after">
                    <page name="page_google_conference" string="Google Conference">
                        <group>
                            <group string="Conference Type">
                                <field name="google_solution" widget="radio"/>
                            </group>
                            <group string="Conference Details"
                                   attrs="{'invisible': [('google_solution', 'in', ('none', False))]}">
                                <field name="google_meet_conference_code"
                                       attrs="{'invisible': [('google_solution', '!=', 'hangoutsMeet')]}"/>
                                <field name="google_conference_signature" groups="base.group_no_one"/>
                                <label for="google_conference_uri"/>
                                <div>
                                    <field name="google_conference_uri" widget="url"/>
                                    <br/>
                                    <span class="text-info"
                                          attrs="{'invisible': [('google_conference_uri', '=', False)]}">
                                        You can join the meeting by clicking on the above link.
                                    </span>
                                </div>
                                <field name="google_conference_entry_point_type"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <!--  Inherit calendar.event Tree View -->
        <record model="ir.ui.view" id="view_calendar_event_tree_inherit">
            <field name="name">calendar.event.tree.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
            <field name="arch" type="xml">
                <field name="allday" position="after">
                    <field name="google_solution" optional="show"/>
                </field>
            </field>
        </record>

        <!--  Inherit calendar.event Calendar View -->
        <record model="ir.ui.view" id="view_calendar_event_calendar_inherit">
            <field name="name">calendar.event.calendar.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="arch" type="xml">
                <field name="partner_ids" position="after">
                    <field name="google_solution"/>
                    <field name="google_conference_uri" widget="url"
                           attrs="{'invisible': [('google_solution', 'in', ('none', False))]}"/>
                </field>
            </field>
        </record>

        <!--  Inherit calendar.event Search View -->
        <record model="ir.ui.view" id="view_calendar_event_search_inherit">
            <field name="name">calendar.event.search.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <field name="partner_ids" position="after">
                    <field name="google_solution"/>
                    <field name="google_meet_conference_code"/>
                </field>
                <filter name="privacy" position="after">
                    <filter string="Online meeting solution" name="google_solution" domain="[]"
                            context="{'group_by': 'google_solution'}"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>